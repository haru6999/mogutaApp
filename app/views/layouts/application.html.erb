<!DOCTYPE html>
<html>
  <head>
    <title>MogutaApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= yield %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <nav>
     <% if user_signed_in? %>
       <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, html: {class: 'logout'} %>
     <% else %>
       <%= link_to 'サインアップ', new_user_registration_path, html: {class: 'signup'} %>
       <%= link_to 'ログイン', new_user_session_path, html: {class: 'login'} %>
     <% end %>
     <!-- ▼ 追加  -->
     <% if user_signed_in? %>
     username : <%= current_user.username %>さん
     <% end %>
     <!-- ▲ 追加 -->
   </nav>
  </body>
</html>
