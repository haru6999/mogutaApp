<header>
  <p class="homeP">メモ一覧 </p>

  <% if params[:order] == "0" %>
    <%= link_to shops_path(order: 1 ) do %>
      <i class="fas fa-sort-amount-up fa-2x homeRight"></i>
    <% end %>
  <% else %>
    <%= link_to shops_path(order: 0 ) do %>
      <i class="fas fa-sort-amount-down fa-2x homeRight"></i>
    <% end %>
  <% end %>
</header>


<div class="contents">

    <% @shops.each do |shop| %>

      <div class="memo">
        <%= link_to(shop_path(shop), class:'list-shop') do %>
        <% if shop.photo === nil %>
        <img src="https://myoji-yurai.net/profileImages/noimage.png">

        <% else %>
          <img src="<%= shop.photo %>">
        <% end %>
        <div class="namedate">
          <p class="shopName"><%= shop.name %></p>
          <p class="shopTime"><%= shop.target_at.try(:strftime, "%Y年%m月%d日%H時%M分") %></p>
        </div>
        <% end %>
      </div>

    <% end %>

</div>

<footer>
  <p><%= @num %>件のメモ</p>
  <%= link_to "/shops/new" do %>
    <i class="far fa-edit fa-2x icon"></i>
<% end %>
</footer>
